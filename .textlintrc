{
  "filters": {},
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 90
      },
      "max-comma": {
        "max": 4
      },
      "max-ten": {
        "max": 4
      },
      "max-kanji-continuous-len": {
        "max"  : 5,
        "allow": ["漢字百科大事典"]
      },
      "arabic-kanji-numbers": false
    },
    "preset-jtf-style": {
      "2.1.5.カタカナ": true,
      "2.1.6.カタカナの長音": true
    }
  }
}